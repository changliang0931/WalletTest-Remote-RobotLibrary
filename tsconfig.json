{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "dom"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}